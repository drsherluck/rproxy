apiVersion: apps/v1
kind: Deployment
metadata:
  name: proxy-deployment
  labels:
    app: proxy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: proxy
  template:
    metadata:
      labels:
        app: proxy
    spec:
      hostname: proxy
      containers:
      - name: proxy
        image: proxy:latest
        imagePullPolicy: Never
        env:
          - name: SERVER_URL
            value: "https://server-service.default.svc.cluster.local"
          - name: SERVER_PASS
            value: "Avocado"
        volumeMounts:
        - name: tls-volume
          mountPath: "/etc/tls"
          readOnly: true
        startupProbe:
          failureThreshold: 5
          periodSeconds: 5
          initialDelaySeconds: 1
          tcpSocket:
            host: "https://server-service.default.svc.cluster.local"
            port: 443

      volumes:
      - name: tls-volume
        secret:
          secretName: tls-secret-proxy

